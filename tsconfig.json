{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"lib": ["ES2020", "DOM"],
		"declaration": true,
		"declarationMap": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"skipLibCheck": true,
		"jsx": "react-jsx",
		"noEmit": false
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
